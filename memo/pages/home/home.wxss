.home {
  width: 100%;
  height: 100%;
  background: #f6f7f9;
}

.header {
  width: 100%;
  height: 130rpx;
  background: #fff;
  position: relative;
}

.header-day {
  width: 100rpx;
  height: 130rpx;
  line-height: 160rpx;
  border: 1rpx solid #d0d0d0;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  font-size: 60rpx;
  text-align: center;
  border-top: none;
}

.header-left {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 35rpx;
  top: 50rpx;
}

.header-left>image {
  width: 100%;
}

.center {
  padding: 20rpx;
  height: 280rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.essay-box {
  background: #f6f7f9;
}

.center-center {
  width: 80%;
  height: 85%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.week {
  width: 100%;
  height: 75rpx;
  font-size: 36rpx;
  text-align: center;
  border-bottom: 1rpx solid #999;
}

.name {
  align-self: flex-end;
}

.toast {
  padding: 20rpx;
  background: #999;
  width: 80%;
  display: flex;
  justify-content: center;
  align-content: center;
  position: fixed;
  left: calc(10% - 20rpx);
  top: 50%;
  transform: translateY(-50%);
  font-weight: 100;
  color: #f3f3f3;
  border-radius: 12rpx;
}

.toast>.hitokoto {
  margin-bottom: 20rpx;
}

.essay-date {
  width: 100%;
  text-align: center;
  padding: 8px 0;
  font-size: 28rpx;
  color: #999;
}

.essay-box:last-child {
  padding-bottom: 10px;
}

.essay-beauty {
  /* margin: 0 auto; */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.beauty-box {
  width: 90%;
  height: 100px;
  background: #fff;
  display: flex;
  margin: 5px 0;
  border-radius: 5px;
}

.time {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 5px;
  margin: 5% 0;
  border-right: 2px solid #f9f9f9;
}

.time>text:first-child {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 3px;
}

.time>text:nth-child(2), text:nth-child(3) {
  font-size: 14px;
  color: #9a9a9a;
}

.essay-date {
  line-height: 40rpx;
}

.article {
  flex: 4;
  overflow: hidden;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.nr {
  height: 80rpx;
  margin-top: 10px;
}

.image-box {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.image-box>image {
  width: 90%;
  height: 90%;
  margin: auto 0;
}

.input {
  color: #000;
}
