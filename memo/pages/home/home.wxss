.home {
  width: 100%;
  height: 100%;
  background: #f6f7f9;
}

.header {
  width: 100%;
  height: 130rpx;
  background: #fff;
  position: relative;
}

.header-day {
  width: 100rpx;
  height: 130rpx;
  line-height: 160rpx;
  border: 1rpx solid #d0d0d0;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  font-size: 60rpx;
  text-align: center;
  border-top: none;
}

.header-left {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 35rpx;
  top: 50rpx;
}

.header-left>image {
  width: 100%;
}

.center {
  padding: 20rpx;
  height: 280rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.center-center {
  width: 80%;
  height: 85%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.week {
  width: 100%;
  height: 75rpx;
  font-size: 36rpx;
  text-align: center;
  border-bottom: 1rpx solid #999;
}

.name {
  align-self: flex-end;
}

.toast {
  padding: 20rpx;
  background: #999;
  width: 80%;
  display: flex;
  justify-content: center;
  align-content: center;
  position: fixed;
  left: calc(10% - 20rpx);
  top: 50%;
  transform: translateY(-50%);
  font-weight: 100;
  color: #f3f3f3;
  border-radius: 12rpx;
}

.toast>.hitokoto {
  margin-bottom: 20rpx;
}

.essay-date {
  width: 100%;
  text-align: center;
  padding: 8px 0;
  font-size: 28rpx;
  color: #999;
}

.beauty-box {
  width: 90%;
  margin-left: 5%;
  height: 130px;
  background: #fff;
  display: flex;
}

.time {
  flex: 1;
  background: #f33;
}

.essay-date {
  line-height: 30px;
}

.article {
  flex: 3;
  background: #caa000;
}

.image-box {
  flex: 2;
  background: #ff6700;
}

.dian {
  font-size: 30px;
  height: 30px;
  display: inline-block;
}
