.box {
 display: flex;
 margin-top: 50rpx;
 justify-content: space-around;
 flex-wrap: wrap;
}
.box .item {
  width: 700rpx;
  height: 400rpx;
  margin: 30rpx 0rpx;
  position: relative;
  border-radius: 50rpx;
  box-shadow: 0px 0px 15px #333;
}
.box .img {
  width: 100%;
  height: 100%;
  border-radius: 50rpx; 
}
.box .shade {
  width: 100%;
  height: 130rpx;
  box-sizing: border-box;
  border-radius: 0rpx 0rpx 50rpx 50rpx;
  position: absolute;
  bottom: 0rpx;
  background-color: #333;
  opacity: 0.6;
}
.item .txt {
  position: absolute;
  margin:0rpx 20rpx;
  color: #fff;
  font-size: 40rpx;
  z-index: 200;
  overflow: hidden;
}