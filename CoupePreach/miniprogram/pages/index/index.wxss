.title {
  padding: 0 40px 0 0;
  height: 42px;
  position: relative;
}

.title-box {
  width: 40px;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
}

.listPage-box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: -100%;
  left: 0px;
  z-index: 9999;
  transition: top 0.5s linear;
}

.listPage {
  width: 100%;
  background: #fff;
  padding: 10px;
  box-sizing: border-box;
  box-shadow: 0 5px 5px #BFBFBF;
}

.top {
  top: 0;
}

.bottom {
  top: -100%;
}

.list-box {
  width: calc((100% - 25px) / 4);
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  border-radius: 5px;
  text-align: center;
  margin: 0 8px 5px 0;
  border: 1px solid #BFBFBF;
  font-size: 14px;
  box-shadow: 0 0 3px #999;
}

.list-box:nth-child(3n) {
  margin: 0 0 5px 0;
}

.image-box {
  width: 30px;
  height: 30px;
  margin: 5px;
}

.image-box>image {
  width: 100%;
  height: 100%;
}