page,
.me {
  height: calc(100% - 5px);
  width: 100%;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 5px #333;
}

.avatar-box {
  display: flex;
  justify-content: center;
}

.me-imgbox {
  width: 100rpx;
  height: 100rpx;
  /* border-radius: 50%; */
  margin-bottom: 20rpx;
}

.me-imgbox>image {
  width: 100%;
  height: 100%;
}

.me-message-box {
  width: calc(100% - 20px);
  height: 260rpx;
  background: #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin: 5px 10px 0;
  border-radius: 10px;
  box-shadow: 0 0 5px #444;
}

.me-name {
  margin-top: 20rpx;
  position: relative;
}

/* .fill-box {
  position: absolute;
  right: -140rpx;
  top: 0;
} */

.me-list {
  width: calc(100% - 60rpx);
  padding: 40rpx 30rpx;
}

.list {
  width: 100%;
  border-bottom: 2rpx solid #999;
  line-height: 110rpx;
}

.fill-box {
  background: #333;
  border-radius: 5px;
  margin-left: 5px;
}

.fill-image {
  width: 30rpx;
  height: 30rpx;
  display: block;
  padding: 2rpx;
}

.fill-text {
  margin: 5rpx 8rpx 0 0;
  font-size: 24rpx;
  color: #f2f2f2;
  padding-bottom: 2px;
}