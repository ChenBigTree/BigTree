.addAdm {
  padding: 20rpx;
}

.listPage-box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: -100%;
  left: 0px;
  z-index: 9999;
  transition: top 0.5s linear;
}

.listPage {
  width: 100%;
  background: #fff;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 10rpx #BFBFBF;
}

.top {
  top: 0;
}

.bottom {
  top: -100%;
}

.addBtn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #999;
  box-shadow: 0 0 6rpx #999;
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f3f3f3;
}

.addBtn>image {
  width: 50%;
}

.input-box {
  border: 1px solid #999;
  padding:  20rpx;
  border-radius: 10rpx;
  position: relative;
}

input {
  width: 90%;
}

.search {
  width: 10%;
  height: calc(100% - 20rpx);
  position: absolute;
  right: 0;
  top: 0;
  padding: 20rpx 10rpx 10rpx 20rpx;
  font-size: 28rpx;
}

.search-result {
  margin-top: 20rpx;
}

.result {
  height: 140rpx;
  border: 1px solid #999;
  border-radius: 8px;
  display: flex;
  align-items: center;
}

.head-img {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 5px;
  margin: 10rpx 20rpx 10rpx;
}

.head-img>image {
  width: 100%;
  height: 100%;
}

.name {
  width: calc(100% - 240rpx);
  line-height: 50rpx;
  font-size: 28rpx;
}
.btn-box{
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.result>.btn-box>.btn,.add {
  border: 1px solid #999;
  border-radius: 8px;
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #fff;
}
.result>.btn-box>.btn:first-child{
  margin-bottom: 8rpx;
}
.add {
  background: #ff6700;
}

.del {
  background: #ab2e2e;
}

.updata {
  background: #60C5F1;
}

.null {
  font-size: 14px;
  text-align: center;
  padding: 25px 0 15px;
  color: #6b6b6b;
}

.list {
  margin-bottom: 20rpx;
}

.addPage {
  width: 100%;
  height: 100%;
  z-index: 3;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.addPage-center {
  width: 90%;
}

.addPage-center>input {
  padding: 30rpx;
  font-size: 16px;
  background: #f3f3f3;
  border-radius: 5px;
}

.addPage-center>view {
  width: 100rpx;
  padding: 20rpx 40rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #f3f3f3;
  margin-top: 20px;
}