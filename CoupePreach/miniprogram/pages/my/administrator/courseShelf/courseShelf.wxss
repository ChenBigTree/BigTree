/* pages/index.wxss */
.nurse {
  display: flex;
  flex-direction: row;
  background: #fff;
  justify-content: top;
  padding-top: 26rpx;
  border-bottom: solid 1rpx rgb(212, 212, 212);
}

.left {
  margin-left: 30rpx;
}

.left image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.right {
  flex: 1;
  margin-left: 30rpx;
  padding-right: 20rpx;
}

.nameView {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.name {
  font-weight: bold;
  font-size: 16px;
}

.keshi {
  color: #999;
  font-size: small;
  margin-left: 10rpx;
  font-weight: bold;
}

.company {
  color: rgb(126, 126, 126);
  font-size: small;
}

.like {
  color: rgb(167, 167, 167);
  font-size: small;
}

.vTitle {
  color: #fff;
  margin: 0rpx 20rpx 10rpx 15rpx;
}

.texts {
  color: #333;
  margin: 6rpx;
  display: block;
}

.btn {
  font-size: 28rpx;
  padding: 0 20rpx;
  color: #2d8cf0;
}

.btn.gray {
  color: #333;
}

.btn .text {
  padding: 10rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  text-align: center;
}
.towTextOverflow {
  text-align: justify;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.oneTextOverflow {
  text-align: justify;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.null{
  text-align: center;
  font-size: 14px;
  color:#6b6b6b;
  padding: 20px 0;
}