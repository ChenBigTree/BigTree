page {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background: #F6F6F6;
}

.nurse {
  box-sizing: border-box;
  background: #fff;
  justify-content: top;
  padding: 13rpx 0;
  border: solid 1rpx rgb(212, 212, 212);
  border-radius: 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 0 10rpx #999;
  margin-bottom: 20rpx;
}

.left {
  margin-left: 30rpx;
  width: 110rpx;
  height: 110rpx;
}

.left image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.right {
  flex: 1;
  margin-left: 30rpx;
  padding-right: 20rpx;
}

.like {
  color: rgb(167, 167, 167);
  font-size: 28rpx;
  margin: 14rpx 6rpx;
}


.texts {
  color: #333;
  display: block;
}

.btn {
  font-size: 28rpx;
  padding: 0 20rpx;
  color: #2d8cf0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.btn .text {
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  color: #f3f3f3;
  box-shadow: 0 0 10rpx #999;
}
.yes {
  margin-bottom: 10px;
  background: #6BD089;
}
.no{
  background: #FFCD42;
}

.oneTextOverflow {
  text-align: justify;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.null {
  text-align: center;
  font-size: 28rpx;
  color: #6b6b6b;
  padding: 40rpx 0;
}