.teacher {
  padding: 10px;
  background: #F6F6F6;
  height: 100%;
  box-sizing: border-box;
}


.text {
  font-size: 42rpx;
  padding: 50rpx 10rpx;
  font-weight: 600;
}

.phone,
.sendSms {
  display: flex;
  align-items: center;
  padding: 30rpx;
  display: flex;
  border-bottom: 1px solid #666;
}

.input2 {
  flex: 2;
}

.name {
  flex: 1;
}

.input1 {
  flex: 3;
}

button[disabled][type='primary'] {
  color: rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(217, 217, 217, 0.5);
  display: inline-block;
  background-color: #D9D9D9;
}

.yzm {
  margin: 0;
  height: 30px;
}

.yzm button {
  font-weight: 500;
  flex: 1;
  font-size: 28rpx;
  width: 100px;
  padding: 0;
}

.tj {
  width: 90%;
  margin: 100rpx 5% 0;
}

.tj button {
  width: 100% !important;
  font-size: 32rpx;
  font-weight: 500;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}

.texts {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
}
