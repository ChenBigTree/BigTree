<view class="joinUs-footer">
	<form bindsubmit="formSubmit">
		<view class="section">
			<input placeholder="请输入用户名" type="text" placeholder-class='placeholders' value="{{userName}}" name='userName' />
		</view>
		<view class="section">
			<input placeholder="请输入你的手机号码" type="number" placeholder-class='placeholders' name='phone' value="{{iponeVal}}" bindinput="getiponeValFun" />
		</view>
		<view class="section">
			<input placeholder="请输入你的邮箱" type="text" placeholder-class='placeholders' name='email' value="{{email}}" bindinput="getEmailValFun" />
		</view>
		<view class="section">
			<input placeholder="请输入你的密码" type="password" placeholder-class='placeholders' name='password' value="{{password}}" bindinput="getpasswordValFun" />
		</view>
		<view class="section">
			<input placeholder="请输入你的确认密码" type="password" placeholder-class='placeholders' name='ispassword' value="{{ispassword}}" bindinput="getispasswordValFun" />
		</view>
		<view class="section section-btn">
			<input placeholder="请确认验证码" type="number" placeholder-class='placeholders' value="{{Verification_Code}}" name='Verification' bindinput="verificationCode" />
			<button bindtap="sendSms" type="primary" disabled="{{disabled}}" plain="true" class="countdown-btn">{{time}}</button>
		</view>

		<view class="section">
			<button class="section-submit" form-type='submit'>提交</button>
		</view>
	</form>
</view>