.home {
  width: 100%;
  height: 100%;
  background: #f6f7f9;
}

.header {
  width: 100%;
  height: 130rpx;
  background: #fff;
  position: relative;
}

.header-day {
  width: 100rpx;
  height: 130rpx;
  line-height: 160rpx;
  border: 1rpx solid #d0d0d0;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  font-size: 60rpx;
  text-align: center;
  border-top: none;
}

.header-left {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 35rpx;
  top: 50rpx;
}

.header-left>image {
  width: 100%;
}

.center {
  padding: 20rpx;
  height: 280rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.center-center {
  width: 80%;
  height: 85%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.week {
  width: 100%;
  height: 75rpx;
  font-size: 36rpx;
  text-align: center;
  border-bottom: 1rpx solid #999;
}

.name {
  align-self: flex-end;
}

.toast {
  padding: 20rpx;
  background: #999;
  width: 80%;
  display: flex;
  justify-content: center;
  align-content: center;
  position: fixed;
  left: calc(10% - 20rpx);
  top: 50%;
  transform: translateY(-50%);
  font-weight: 100;
  color: #f3f3f3;
  border-radius: 12rpx;
}

.toast>.hitokoto {
  margin-bottom: 20rpx;
}

.box-box {
  width: 100%;
  height: 600px;
}

.box-box>view {
  width: 90%;
  height: 200rpx;
  background: #C8EBFA;
  border-radius: 30rpx;
  margin: 10px 0 10rpx 5%;
  line-height: 200rpx;
  text-align: center;
  font-weight: bold;
  font-size: 30px;
  box-shadow: 5px 5px 5px #000;
}
.goback{
  width: 50rpx;
  height: 50rpx;
  position: fixed;
  /* background: #000; */
  left: 30rpx;
  top: 50rpx;
  z-index: 2;
}