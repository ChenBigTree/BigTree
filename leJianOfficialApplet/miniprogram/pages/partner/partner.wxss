/* pages/partner/partner.wxss */
.partner-title {
  width: 100%;
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.partner-box {
  padding: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.partners {
  width: 31%;
  /* height: 300rpx; */
  margin: 0 20rpx 20rpx 0;
  background: #f2f2f2;
  box-shadow: 3rpx 3rpx 5rpx 2rpx #BFBFBF;
}

.partners:nth-child(3n) {
  margin: 0 0 20rpx 0;
}

.partners-logo {
  width: 196rpx;
  height: 196rpx;
  border: 2rpx solid #000;
  border-radius: 50%;
  overflow: hidden;
  margin: 10rpx auto 0;
  box-shadow: 3rpx 3rpx 5rpx 2rpx #000;
}

.partners-logo>image {
  width: 100%;
  height: 100%;                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
  display: block;
}

.partners-name {
  width: calc(100% - 20rpx);
  padding: 20rpx;
  font-size: 24rpx;
}