page,.me{
  width: 100%;
  height: 100%;
}
.avatar {
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.me-imgbox {
  width: 100rpx;
  height: 100rpx;
  /* border-radius: 50%; */
  margin-bottom: 20rpx;
}
.me-imgbox>image{
  width: 100%;
  height: 100%;
}
.me-message-box{
  width: 100%;
  height: 260rpx;
  background: #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.me-name{
  margin-top: 20rpx;
}

.me-list{
  width: calc(100% - 60rpx);
  padding: 40rpx 30rpx;
}

.list{
  width: 100%;
  border-bottom: 2rpx solid #999;
  line-height: 110rpx;
}