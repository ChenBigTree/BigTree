<view class="tj" wx:if="{{!isShow}}">
	<text>{{text}}</text>
</view>
<view wx:if="{{isShow}}" class="business">
	<!-- <view class="no">{{isText}}</view> -->
	<form  bindsubmit="formSubmit">
		<van-cell-group>
			<van-field name="companyName" value="{{formVal.companyName}}" bindinput="companyName" required clearable label="公司名：" placeholder="请填写公司名称" />
			<view class="logo-box clearfix">
				<button class="uplogo fl" bindtap="upIogo">上传logo</button>
				<view class="img-box fl" hidden="{{!formVal.logoSrc}}">
					<image mode="widthFix" src="{{formVal.logoSrc}}"></image>
				</view>
				<view class="img-box c fl" hidden="{{formVal.logoSrc}}">
					<view class="c1"></view>
					<view class="c2"></view>
				</view>
			</view>
			<view class="address">
				<van-field class="address-input" name="companyaddress" bindinput="companyaddress" value="{{formVal.companyaddress}}" required label="公司地址：" placeholder="请填写公司地址" />
				<van-icon bindtap="address" name="location-o" class="loction-icon" />
			</view>
			<van-field name="linkman" value="{{formVal.linkman}}" bindinput="linkman" required clearable label="联系人：" placeholder="请填写联系人" />
			<van-field name="iponeVal" value="{{formVal.iponeVal}}" bindinput="iponeVal" required clearable label="联系方式：" placeholder="请填写联系方式" type="idcard" />
			<van-field name="companyBrief" value="{{formVal.companyBrief}}" bindinput="companyBrief" required clearable label="公司简介：" type="textarea" placeholder="请填写公司简介" autosize border="{{ false }}" />
		</van-cell-group>
		<button class="btn" form-type="submit">提交</button>
	</form>
</view>